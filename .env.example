# KindlyGuard Production Environment Variables
# Copy this file to .env and update with your actual values

# Database
DB_PASSWORD=changeme

# Redis
REDIS_PASSWORD=changeme

# Grafana
GRAFANA_PASSWORD=changeme

# SSL Certificates (update paths as needed)
SSL_CERT_PATH=./deploy/nginx/ssl/cert.pem
SSL_KEY_PATH=./deploy/nginx/ssl/key.pem

# Docker platform for multi-arch builds
DOCKER_DEFAULT_PLATFORM=linux/amd64

# Version information for builds
VERSION=1.0.0
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse --short HEAD)